<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    name 最好是自定义view的名字-->
    <declare-styleable name="TextView">
        <!-- name 属性名称 format格式-->
        <attr name="mytext" format="string" />
        <attr name="mytextColor" format="color" />
        <!--    dimension 宽高 字体大小    -->
        <attr name="mytextSize" format="dimension" />
        <attr name="mymaxLength" format="integer" />
        <!--   reference 资源     -->
        <attr name="mybackground" format="reference|color" />
        <attr name="myinputType">
            <enum name="number" value="1" />
            <enum name="text" value="2" />
            <enum name="password" value="3" />
        </attr>
    </declare-styleable>
    <declare-styleable name="QQStepView">
        <attr name="outerColor" format="color" />
        <attr name="innerColor" format="color" />
        <attr name="borerWidth" format="dimension" />
        <attr name="stepTextSize" format="dimension" />
        <attr name="stepTextColor" format="color" />
    </declare-styleable>
    <!--    自定义的颜色变化的颜色和不变化的颜色-->
    <declare-styleable name="ColorTrackTextView">
        <attr name="originColor" format="color" />
        <attr name="changeColor" format="color" />
    </declare-styleable>
    <!--    自定义进度条bar的属性-->
    <declare-styleable name="PropressBar">
        <attr name="innerBackground" format="color" />
        <attr name="outerBackground" format="color" />
        <attr name="roundWidth" format="dimension" />
        <attr name="progressTextsize" format="dimension" />
        <attr name="progressTextColor" format="color" />
    </declare-styleable>
</resources>